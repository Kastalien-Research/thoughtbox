{
  "name": "@kastalien-research/thoughtbox",
  "version": "1.2.2",
  "description": "MCP server providing cognitive enhancement tools for LLM agents: structured reasoning, mental models, and literate programming notebooks",
  "mcpName": "io.github.Kastalien-Research/thoughtbox",
  "license": "MIT",
  "author": "glassBead at Kastalien Research",
  "homepage": "https://github.com/Kastalien-Research/thoughtbox",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kastalien-Research/thoughtbox.git"
  },
  "bugs": "https://github.com/Kastalien-Research/thoughtbox/issues",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "reasoning",
    "thoughtbox",
    "mental-models",
    "notebook",
    "cognitive-tools",
    "ai",
    "llm"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "src/index.ts",
  "types": "./dist/index.d.ts",
  "bin": {
    "thoughtbox": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "embed-templates": "tsx scripts/embed-templates.ts",
    "embed-loops": "tsx scripts/embed-loops.ts",
    "embed": "npm run embed-templates && npm run embed-loops",
    "dev": "npm run embed && smithery dev",
    "build": "npm run check:cycles && npm run build:local",
    "build:local": "npm run embed && tsc && shx cp -r src/resources dist/ && shx cp -r templates dist/ && shx cp src/observatory/ui/*.html dist/observatory/ui/ && shx chmod +x dist/*.js",
    "build:smithery": "npm run embed && smithery build",
    "start": "node dist/index.js",
    "start:stateful": "node dist/http-stateful.js",
    "start:stdio": "node dist/index.js",
    "start:smithery": "node .smithery/index.cjs",
    "prepublishOnly": "npm run build:local",
    "watch": "tsc --watch",
    "check:cycles": "./scripts/check-cycles.sh",
    "check:cycles:strict": "./scripts/check-cycles.sh --strict",
    "changelog:update": "git log --format='%H|%s|%an|%ad' HEAD~20..HEAD > .changelog-commits.txt && tsx scripts/changelog-update.ts .changelog-commits.txt && rm .changelog-commits.txt",
    "prepare": "husky",
    "test": "npm run build:local && tsx scripts/agentic-test.ts --all",
    "test:tool": "npm run build:local && tsx scripts/agentic-test.ts --tool",
    "test:quick": "tsx scripts/agentic-test.ts --tool",
    "benchmark": "tsx dgm-specs/harness/cli.ts run",
    "benchmark:baseline": "tsx dgm-specs/harness/cli.ts baseline",
    "benchmark:report": "tsx dgm-specs/harness/cli.ts report",
    "improvement-loop": "tsx scripts/agents/run-improvement-loop.ts",
    "improvement-loop:dry": "tsx scripts/agents/run-improvement-loop.ts --dry-run --verbose",
    "improvement-loop:verbose": "tsx scripts/agents/run-improvement-loop.ts --verbose",
    "test:agentops": "vitest run agentops/tests/",
    "test:behavioral": "tsx scripts/agents/test-behavioral-contracts.ts",
    "test:behavioral:variance": "tsx scripts/agents/test-behavioral-contracts.ts --variance-only",
    "agentops:daily": "tsx agentops/runner/cli.ts daily-dev-brief",
    "agentops:implement": "tsx agentops/runner/cli.ts implement"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "cheerio": "^1.2.0",
    "fast-xml-parser": "^4.5.3",
    "@modelcontextprotocol/sdk": "1.25.3",
    "openai": "^4.104.0",
    "rss-parser": "^3.13.0",
    "@smithery/sdk": "^1.7.5",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.6.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "gray-matter": "^4.0.3",
    "langsmith": "^0.5.2",
    "ws": "^8.18.3",
    "yaml": "^2.8.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@anthropic-ai/sdk": "^0.39.0",
    "@octokit/rest": "^20.1.2",
    "@smithery/cli": "^1.6.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^22.18.12",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.32",
    "dotenv": "^17.2.3",
    "husky": "^9.1.6",
    "madge": "^8.0.0",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
